generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model User {
  id        Int    @id @default(autoincrement())
  username     String
  email     String  @unique
  password  String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  toko Toko?
  
  @@map("user")
}
model Toko {
  id        Int    @id @default(autoincrement())
  nama_toko  String
  alamat    String
  slogan String
  desc String
  img String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  

  userId Int @unique
  user  User @relation(fields: [userId],references: [id], onDelete: Cascade)
  
  cabang Cabang[]

  @@map("toko")
}
model Cabang {
  id        Int    @id @default(autoincrement())
  nama_toko_cabang  String
  alamat    String
  kota String
  kode_pos String
  pin_point String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tokoId Int
  toko Toko @relation(fields: [tokoId],references: [id], onDelete: Cascade)

  @@map("cabang")
}


